{
  "manifest_version": 2,

  "name": "Chrome Joule",
  "description": "Chrome app to control Joule",
  "version": "0.0.3",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js"]
      }
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },

  "permissions": [
    "http://www.chefsteps.com/",
    "storage",
    "cookies"
  ]
}
